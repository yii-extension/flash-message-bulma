{
    "name": "yii-extension/flash-message-bulma",
    "type": "library",
    "description": "Flash Message Bulma Widget",
    "keywords": [
        "yii3",
        "widget",
        "flash-message",
        "bulma"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "yii-extension/bulma": "^1.0.0",
        "yiisoft/session": "^1.0"
    },
    "require-dev": {
        "nyholm/psr7": "^1.3.0",
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.8",
        "vimeo/psalm": "^4.8",
        "yiisoft/test-support": "^1.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Yii\\Extension\\Bulma\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yii\\Extension\\Bulma\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
